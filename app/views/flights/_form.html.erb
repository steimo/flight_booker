<%= form_with(url: root_path, method: "get") do |form| %>
  <% label_style = 'mb-2 text-gray-900 leading-tight font-medium' %>
  <% container_style = 'my-2 p-4 flex flex-col' %> 
  <% select_style = 'inline-flex justify-center pr-8 px-4 text-sm font-medium leading-5 text-gray-700 transition duration-150 ease-in-out bg-white border border-gray-300 rounded-md hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-50 active:text-gray-800' %>
      <div class="<%= container_style %>">
        <%= form.label :departure_airport_id, 'Origin', class: label_style  %>
        <%= form.select(:departure_airport_id, @airports, {selected: params[:arrival_airport_id]}, { :class => select_style }) %>
      </div>
      <div class="<%= container_style %>">
        <%= form.label :arrival_airport_id, 'Destination', class: label_style %>
        <%= form.select(:arrival_airport_id, @airports, {selected: params[:arrival_airport_id]}, { :class => select_style }) %>
      </div>
      <div class="<%= container_style %>">
        <%= form.label :date, class: label_style %>
        <%= form.select(:start_time, @date_options, {selected: params[:arrival_airport_id]}, { :class => select_style }) %>
      </div>
      <div class="<%= container_style %>">
        <%= form.label :passengers, class: label_style %>
        <%= form.select(:passengers, options_for_select(1..4, selected: params[:passengers]), {}, { :class => select_style } ) %>
      </div>
      <div class="<%= container_style %>">
        <%= form.submit 'Search', class: "inline-flex justify-center rounded-lg py-3 px-5 bg-blue-500 text-white font-medium cursor-pointer" %>
      </div>
<% end %>

<div id="<%= dom_id flight %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Departure airport:</strong>
    <%= flight.departure_airport_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Arrival airport:</strong>
    <%= flight.arrival_airport_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Start time:</strong>
    <%= flight.start_time %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Duration:</strong>
    <%= flight.duration %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this flight", flight, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this flight', edit_flight_path(flight), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
